<%= form_with(model: @uploaded_file, url: uploads_path, local: true) do |form| %>
  <% if @uploaded_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@uploaded_file.errors.count, "error") %> prohibited this upload from being saved:</h2>
      <ul>
        <% @uploaded_file.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :file, "Selecione o arquivo .txt" %><br>
    <%= form.file_field :file, accept: '.txt' %>
  </div>

  <div class="actions">
    <%= form.submit "Fazer Upload" %>
  </div>
<% end %>